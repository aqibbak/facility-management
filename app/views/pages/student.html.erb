<% @title = "Real-time Occupancy at " + @zone_name %>

<% provide(:title, @title) %>

<%= javascript_include_tag "student" %>

<% @perc = '%.2f' % (@occupancy.to_f/120*100)  %>

<body class="student">
	<header>
		<div class="col-md-12">
			<%= image_tag "denison-logo.svg", class:"logo" %>
			<p class="name">Facility Management</p>
		</div>
	</header>
	<div class="container">
	<input id='perc' style='display:none' value="<%= @perc %>"></input>
	<input id='occupancy' style='display:none' value="<%= @occupancy %>"></input>
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6 centered">
			<h1 class="zone_name"><%= @zone_name %></h1>
			<div id="chart"></div>
			<p class="updated_at">Last updated at 
				<span class='time'><%= @updated_at %></span>
			</p>
		</div>
		<div class="col-md-3"></div>
		<!-- <input type='button' class="update" value='Update'> -->
	</div>	
</div>
</body>